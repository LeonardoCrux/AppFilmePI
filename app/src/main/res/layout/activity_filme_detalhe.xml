<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.FilmeDetalheActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imagemFilmeDetalhe"
            android:layout_width="118dp"
            android:layout_height="170dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tituloFilmeDetalhe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imagemFilmeDetalhe"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dataFilmeDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="116dp"
            android:layout_marginTop="24dp"
            android:fontFamily="serif"
            android:text="De"
            android:textColor="@color/cinzaTexto"
            android:textSize="10sp"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/imagemFilmeDetalhe"
            app:layout_constraintTop_toBottomOf="@+id/bilheteriaDetalhe" />

        <TextView
            android:id="@+id/sinopseFilmeDetalhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="serif"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="serif"
            android:text="TÃ­tulo original :"
            android:textColor="@color/cinzaTexto"
            android:textSize="8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/duracaoFilmeDetalhe" />

        <TextView
            android:id="@+id/originalTitlefilmeDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:fontFamily="serif"
            android:textColor="@color/cinzaTexto"
            android:textSize="8sp"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toTopOf="@+id/textView10"
            tools:text="titulo original" />

        <TextView
            android:id="@+id/duracaoFilmeDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shareFilme"
            tools:text="200min" />

        <TextView
            android:id="@+id/orcamentoDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:fontFamily="serif"
            android:textColor="@color/cinzaTexto"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imagemFilmeDetalhe"
            app:layout_constraintTop_toBottomOf="@+id/generoDetalhe" />

        <TextView
            android:id="@+id/elencoDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="serif"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imagemFilmeDetalhe"
            app:layout_constraintTop_toBottomOf="@+id/generoDetalhe" />

        <TextView
            android:id="@+id/estreiaFilmeDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:fontFamily="serif"
            android:textColor="@color/cinzaTexto"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imagemFilmeDetalhe"
            app:layout_constraintTop_toBottomOf="@+id/dataFilmeDetalhe"
            tools:text="11111" />

        <TextView
            android:id="@+id/bilheteriaDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="serif"
            android:textColor="@color/cinzaTexto"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imagemFilmeDetalhe"
            app:layout_constraintTop_toBottomOf="@+id/orcamentoDetalhe" />

        <TextView
            android:id="@+id/generoDetalhe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="serif"
            android:textColor="@color/cinzaTexto"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imagemFilmeDetalhe"
            app:layout_constraintTop_toBottomOf="@+id/tituloFilmeDetalhe" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerElenco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@color/backRecycler"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:text="Elenco"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sinopseFilmeDetalhe" />

        <ProgressBar
            android:id="@+id/progressBarSeriesDetalhe"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageAddFavorito"
            android:layout_width="37dp"
            android:layout_height="43dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/shareFilme"
            app:layout_constraintTop_toBottomOf="@+id/imagemFilmeDetalhe"
            app:srcCompat="@drawable/ic_favorite_branco" />

        <ImageButton
            android:id="@+id/botaoHomeFilme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/corDeFundo"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_home_black_24dp" />

        <ImageView
            android:id="@+id/shareFilme"
            android:layout_width="37dp"
            android:layout_height="43dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagemFilmeDetalhe"
            app:srcCompat="@drawable/ic_share_black_24dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>