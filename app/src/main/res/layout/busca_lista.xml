<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagem_busca"
        android:layout_width="34dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/retornorei" />

    <TextView
        android:id="@+id/busca_filme_textView"
        android:layout_width="324dp"
        android:layout_height="22dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imagem_busca"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="O Senhor dos AnÃ©is: O Retorno do Rei" />

    <TextView
        android:id="@+id/estreia_busca_textView"
        android:layout_width="161dp"
        android:layout_height="21dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagem_busca"
        app:layout_constraintTop_toBottomOf="@+id/busca_filme_textView"
        tools:text="2020-12-31" />
</androidx.constraintlayout.widget.ConstraintLayout>