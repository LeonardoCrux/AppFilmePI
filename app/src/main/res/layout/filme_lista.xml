<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagemCartazRecycler"
        android:layout_width="128dp"
        android:layout_height="201dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chefao" />

    <TextView
        android:id="@+id/textRecyclerCartaz"
        android:layout_width="128dp"
        android:layout_height="24dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:allowUndo="false"
        android:autoText="false"
        android:cursorVisible="false"
        android:ellipsize="end"
        android:filterTouchesWhenObscured="false"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hapticFeedbackEnabled="false"
        android:nestedScrollingEnabled="false"
        android:singleLine="true"
        android:textStyle="bold"
        app:autoSizeTextType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagemCartazRecycler" />

    <TextView
        android:id="@+id/cartazData"
        android:layout_width="128dp"
        android:layout_height="15dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRecyclerCartaz" />
</androidx.constraintlayout.widget.ConstraintLayout>